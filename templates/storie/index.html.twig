{% extends 'base.html.twig' %}

{% block title %}Usuarios con historias{% endblock %}

{% block body %}
<h1 class="stories-page-title">Usuarios con historias</h1>

<div class="stories-strip">

    {# Bot√≥n Crear Historia #}
    <div class="story-card">
        <a href="{{ path('app_storie_new') }}" class="link-muted">
            <div class="story-avatar story-create">
                <div class="story-avatar-inner">
                    <span>+</span>
                </div>
            </div>
            <div class="story-create-label">Crear</div>
        </a>
    </div>

    {# Lista de usuarios con historias #}
    {% for user in users %}
        <div class="story-card">
            <a href="{{ path('app_storie_user_index', {'username': user.username}) }}" class="link-muted">
                <div class="story-avatar">
                    <div class="story-avatar-inner">
                        <span>{{ user.username|first|upper }}</span>
                    </div>
                </div>
                <div>{{ user.username }}</div>
            </a>
        </div>
    {% else %}
        <span class="link-muted">No hay usuarios con historias.</span>
    {% endfor %}
</div>

{% endblock %}
