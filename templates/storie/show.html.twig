{% extends 'base.html.twig' %}

{% block title %}Storie{% endblock %}

{% block body %}
<div class="story-container">
    <h1 class="page-title text-center">Historia</h1>

    <div class="story-box">
        {% if storie.img %}
            <img src="{{ asset('stories/' ~ storie.img) }}" 
                 alt="Storie image"
                 class="story-image">
        {% endif %}

        <div class="story-meta">
            <p><strong>Fecha:</strong> 
                {{ storie.datetime ? storie.datetime|date('Y-m-d H:i') : '' }}
            </p>

            <p>
                <strong>Subido por:</strong>
                <a class="inline-link" href="{{ path('app_user_show', {'username': storie.author.username}) }}">
                    {{ storie.author.username }}
                </a>
            </p>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_storie_user_index', {'username': storie.author.username}) }}" class="btn btn-primary btn-sm">Volver</a>
    </div>

    <div class="mt-2 text-center">
        {{ include('storie/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
