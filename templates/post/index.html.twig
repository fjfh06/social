{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}

<h1 class="feed-title">Inicio</h1>

<div class="feed">

    {% for post in posts %}
        <article class="post-card">

            <header class="post-card-header">
                <div class="post-user">
                    <div class="avatar-circle">
                        {{ post.author.username|first|upper }}
                    </div>

                    <div>
                        <a class="post-username"
                           href="{{ path('app_user_show', {'username': post.author.username}) }}">
                            {{ post.author.username }}
                        </a>

                        <div class="post-meta">
                            {{ post.postDate ? post.postDate|date('d M H:i') : '' }}
                        </div>
                    </div>
                </div>

                {# BOTONES DE SEGUIR #}
                {% if app.user and app.user.id != post.author.id %}
                    {% set isFollowing = post.author in app.user.following %}

                    {% if post.author.isPrivate %}
                        {% if isFollowing %}
                            <a class="btn btn-sm btn-secondary"
                               href="{{ path('app_user_unfollow', {'id': post.author.id}) }}">
                                Dejar de seguir
                            </a>
                        {% else %}
                            <span class="post-meta">Cuenta privada</span>
                        {% endif %}
                    {% else %}
                        {% if isFollowing %}
                            <a class="btn btn-sm btn-secondary"
                               href="{{ path('app_user_unfollow', {'id': post.author.id}) }}">
                                Dejar de seguir
                            </a>
                        {% else %}
                            <a class="btn btn-sm btn-primary"
                               href="{{ path('app_user_follow', {'id': post.author.id}) }}">
                                Seguir
                            </a>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </header>

            {% if post.img %}
                <div class="post-image-wrapper">
                    <img src="{{ asset('img/' ~ post.img) }}" 
                         alt="Post Image" 
                         class="post-image">
                </div>
            {% endif %}

            <div class="post-body">

                <div class="post-actions mb-2">

                    {# LIKE #}
                    {% if app.user %}
                        {% if post.likes.contains(app.user) %}
                            <a href="{{ path('app_post_unlike', {'id': post.id}) }}">‚ù§Ô∏è</a>
                        {% else %}
                            <a href="{{ path('app_post_like', {'id': post.id}) }}">ü§ç</a>
                        {% endif %}
                    {% endif %}

                    {# REPOST #}
                    {% if app.user %}
                        {% if post.repostedBy.contains(app.user) %}
                            <a href="{{ path('app_post_unrepost', {'id': post.id}) }}">‚ùå</a>
                        {% else %}
                            <a href="{{ path('app_post_repost', {'id': post.id}) }}">üîÅ</a>
                        {% endif %}
                    {% endif %}

                    <a class="link-muted" href="{{ path('app_post_show', {'id': post.id}) }}">Ver</a>

                    {% if app.user and app.user == post.author %}
                        <a class="link-muted" href="{{ path('app_post_edit', {'id': post.id}) }}">Editar</a>
                    {% endif %}

                </div>

                <div class="post-stats">
                    <span>{{ post.likes|length }} likes</span>
                    <span>{{ post.repostedBy|length }} reposts</span>
                </div>

                {% if post.text %}
                    <p class="post-text">{{ post.text }}</p>
                {% endif %}

                <div class="divider"></div>
            </div>

        </article>

    {% else %}
        <div class="feed-empty">
            <p>No hay posts todav√≠a.</p>
            <a class="btn-primary" href="{{ path('app_post_new') }}">Crear el primero</a>
        </div>
    {% endfor %}

</div>

{% endblock %}
